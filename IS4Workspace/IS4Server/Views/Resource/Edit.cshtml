
@{
    ViewData["Title"] = "Edit Resource";
    <script src="~/Scripts/ResourceJS.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $("#summaryTable").DataTable();
            $('[name="inputStatus"]').bootstrapSwitch({

                onText: "Enabled",
                offText: "Disabled"
            });

        });
    </script>

}


<h2 style="text-align:center">Edit Resource</h2>
<br />

