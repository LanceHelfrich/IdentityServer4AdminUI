@model IS4Server.ViewModels.WebClients

@{
    ViewData["Title"] = "Add Client";
    <script src="~/Scripts/ClientJS.js"></script>
}

<h2 style="text-align:center">Add Client</h2>

<form asp-action="Create">
    
    <div class="alert alert-danger alert-dismissable fade in" id="clientErrorMessage" hidden></div>

    <br />
    <div class="row">
        <h4>Client Details</h4>
        <hr />

        <div class="row">
            <div class="col-sm-2">
                <label asp-for="ClientId" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="ClientId" class="form-control" id="ClientId" />
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-sm-2">
                <label asp-for="ClientName" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="ClientName" class="form-control" id="ClientName" />
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-sm-2">
                <label asp-for="ClientSecret" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="ClientSecret" class="form-control" id="ClientSecret" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="ClientScope" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="ClientScope" class="form-control" id="ClientScope" />
            </div>
        </div>
        <br />


        <div class="row">
            <div class="col-sm-4">
                <a class="btn btn-default" onclick="clearClient()">Clear</a>
            </div>

            <div class="col-sm-4" style="text-align:center">
                <a href="Index" class="btn btn-default">Cancel</a>
            </div>

            <div class="col-sm-4" style="text-align:right">
                <input type="submit" value="Save" class="btn btn-default" onclick="return validateClientInput();" />

            </div>

        </div>


    </div>
</form>

